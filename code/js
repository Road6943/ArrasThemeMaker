


// When the user scrolls the page, execute myFunction 
window.onscroll = function() {myFunction()};

function myFunction() {
  var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
  var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
  var scrolled = (winScroll / height) * 100;
  document.getElementById("myBar").style.width = scrolled + "%";
}




document.getElementById('finalCode').style.width="96%";

document.getElementById("finalCode").style.border = "3px solid #6b696c";
document.getElementById('finalCode').style.borderBottomRightRadius="8px";
document.getElementById('finalCode').style.borderTopRightRadius="8px";
document.getElementById('finalCode').style.borderBottomLeftRadius="8px";
document.getElementById('finalCode').style.borderTopLeftRadius="8px";

document.getElementById("finalCode").style.padding = "2px 6px 2px 6px";

document.getElementById("finalCode").style.backgroundColor = "#a7a7b0";
document.getElementById("finalCode").style.color = "#000000";




